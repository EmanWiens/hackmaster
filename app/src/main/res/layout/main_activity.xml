<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:background="@drawable/backgroundhacker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackmaster.presentation.MainActivity">

    <Button
        android:id="@+id/playBtn"
        android:layout_width="240dp"
        android:layout_height="84dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="361dp"
        android:layout_marginStart="360dp"
        android:background="@android:color/holo_green_light"
        android:onClick="playMessage"
        android:text="Single Player"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/stats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stats"
        android:layout_width="249dp"
        android:layout_height="80dp"
        android:layout_marginBottom="144dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="statsPress"
        android:text="Stats"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/muteBtn"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/volumeunmute"
        android:onClick="muteSoundBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="129dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hack_master" />

</android.support.constraint.ConstraintLayout>
