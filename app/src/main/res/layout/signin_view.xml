<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signin_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/playerOneName"
        android:layout_width="249dp"
        android:layout_height="71dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="176dp"
        android:ems="10"
        android:hint="Enter your Code Name"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:text="Jane Doe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="167dp"
        android:layout_height="96dp"
        android:layout_marginBottom="137dp"
        android:layout_marginEnd="396dp"
        android:layout_marginStart="397dp"
        android:layout_marginTop="47dp"
        android:onClick="signInExitMessage"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerOneName"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
